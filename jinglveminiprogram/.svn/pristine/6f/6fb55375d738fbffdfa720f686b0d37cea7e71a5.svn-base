/**index.wxss**/
page{
  background: #F7F7F9;
}
.dress-container{
  width: 100%;
  height: 140rpx;
  background: #fff;
  margin-top: 2rpx;
  display: flex;
  align-items: center;
}
.dress-icon{
  width: 72rpx;
  height: 72rpx;
  background: rgb(255,222,238);
  text-align: center;
  line-height: 72rpx;
  margin-left: 30rpx;
}
.text-container{
  margin-left: 9rpx;
}
.adress{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-top: -10rpx;
  margin-bottom: 10rpx;
}
.concactinfo{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.telephone{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.goods-info{
  width: 100%;
  height: 314rpx;
  margin-top: 20rpx;
  background: #fff;
}
.goods-detail{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding-top: 30rpx;
  margin-left: 30rpx;
}
.detail{
  width: calc(100% - 30rpx);
  margin-top: 22rpx;
  margin-left: 30rpx;
  display: flex;
}
.detail-img image{
  width: 180rpx;
  height: 140rpx;

}
.goods-text{
  width: calc(100% - 17rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 17rpx;
  position: relative;
}
.goods-num{
  position: absolute;
  right: 25rpx;
  bottom: 0;
}
.goods-price{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(254,54,71,1); 
}
.price{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(254,54,71,1);
}
.goods-num{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.totalpri{
  position: absolute;
  right: 25rpx;
  bottom: -55rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.totalprice{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(254,54,71,1);
}

.pay-info{
  width: 100%;
  height: 270rpx;
  background: #fff;
  margin-top: 22rpx;
}
.pay-allinfo{
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.pay-detail{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height: 40rpx;
  /* margin-bottom: 17rpx; */
}