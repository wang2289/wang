/* pages/answercard/answercard.wxss */
page {
background:#F7F7F9;
}

.card-box {
  display: flex;
  flex-direction: column;
}

.card-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 29rpx 30rpx 24rpx 30rpx;
}

.card-name {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.card-num {
  font-size: 26rpx;
  color: rgba(102, 102, 102, 1);
}
.card-body{
  background: #fff;
  padding-left: 1.5rpx;
  padding-bottom: 41rpx;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}
.card-list{
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
answer-cmp{
  margin-top: 33rpx;
  margin-left: 27.5rpx;
  margin-right: 28.5rpx;
}
.kong{
  width: 68rpx;
  height: 68rpx;
  margin-top: 33rpx;

}
.active {
  border: 1rpx solid #fe3f36;
  color: #fe3f36;
  transform: rotateZ(360deg)
}

.default {
  border: 1rpx solid rgba(153, 153, 153, 1);
  color: #666;
  transform: rotateZ(360deg)
}
