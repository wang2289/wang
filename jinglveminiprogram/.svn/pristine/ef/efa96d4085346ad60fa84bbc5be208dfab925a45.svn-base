/**index.wxss**/

.main-container {
  background: rgba(247, 247, 249, 1);
  width: 100%;
}

.container {
  display: block;
  padding: 0;
  background: white;
}

.nav-bar {
  display: flex;
  justify-content: space-around;
  background: white;
  margin-top: -20rpx;
}

.slide-image {
  width: 690rpx;
  height: 287rpx;
  margin-left: 30rpx;
  border-radius: 8rpx;
  box-shadow: rgba(0, 0, 0, 0.2) 0 1px 5px 0px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.navbar-item {
  width: 150rpx;
  height: 180rpx;
}

.navbar-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.navbarimg {
  width: 100rpx;
  height: 110rpx;
}

.text-container {
  margin-top: -15rpx;
}

.item-text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.open-class {
  background: white;
  margin-top: 20rpx;
}

.open-classtext {
  padding-top: 51rpx;
  margin-left: 30rpx;
  height: 34rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
}

.scroll-x {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 30rpx;
  background: white;
}

.openclass-detail {
  width: 448rpx;
  height: 146rpx;
  background: rgba(247, 247, 247, 1);
  display: flex;
  align-items: center;
  padding-left: 21rpx;
}

.teacherpic-contaienr {
  width: 90rpx;
  height: 90rpx;
}

.teacherpic-contaienr image {
  width: 90rpx;
  height: 90rpx;
}
.openclass-scroll{
  height: 280rpx;
}
.classname {
  height: 28rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top: -10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}

.teachername {
  height: 25rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-left: 10rpx;
}

.teachername image {
  width: 24rpx;
  height: 24rpx;
}

.openclass-time{
  width: 100%;
  height: 85rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.open-time{
  height:21rpx;
  font-size:22rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.open-time image{
  width: 21rpx;
  height: 21rpx;
}
.nowwatch {
  color:#FE3647;
}

.item-container{
  margin-right: 20rpx;
}
.openclass-item {
  
  width: 469rpx;
  height: 231rpx;
  
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.11);
  border-radius: 8px;
 
}
.opentime-container{
  margin-left: 30rpx;
}
.watch-now{
  margin-right: 16rpx;
}