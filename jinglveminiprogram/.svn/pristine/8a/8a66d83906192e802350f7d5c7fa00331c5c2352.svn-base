/**index.wxss**/

.main-container {
  background: rgba(247, 247, 249, 1);
  width: 100%;
}

.container {
  display: block;
  padding: 0;
  background: white;
}

.nav-bar {
  display: flex;
  justify-content: space-around;
  background: white;
  margin-top: -20rpx;
}

.slide-image {
  width: 690rpx;
  height: 287rpx;
  margin-left: 30rpx;
  border-radius: 8rpx;
  box-shadow: rgba(0, 0, 0, 0.2) 0 1px 5px 0px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.navbar-item {
  width: 150rpx;
  height: 180rpx;
}

.navbar-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.navbarimg {
  width: 100rpx;
  height: 110rpx;
}

.text-container {
  margin-top: -15rpx;
}

.item-text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.open-class {
  background: white;
  margin-top: 20rpx;
}

.open-classtext {
  display: flex;
  padding-top: 51rpx;
  margin-left: 30rpx;
  height: 34rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
  flex-direction: row;
 justify-content: space-between;


}
.card-list{
  display: flex;
  flex-direction: column;
padding-bottom: 30rpx;
}
.card-item {
  padding-top: 30rpx;
    padding-bottom: 30rpx;
margin-left: 31rpx;
margin-right: 31rpx;
  display:flex;
  flex-direction: row;
  border-top: 1px solid #ddd;
}
.card-list :first-child{
  border: 0px;
}
.card-item image {
  width:268rpx;
height:150rpx;
border-radius:8rpx;

}
.card-item-text{
position:  relative;
  display: flex;
   flex-direction: column;
   margin-left: 17rpx;
 width: 100%;

}
.card-item-text text{
color: #333;
font-size: 32rpx;
text-align: left;


}
.text-foot{
  width: 100%;
  position: absolute;
    display: flex;
      flex-direction: row;
bottom: 0px;
justify-content:  space-between;
 height: 30rpx;
 line-height: 30rpx;

}
.study-num {
 color: #999;
 font-size: 22rpx;
align-items:  baseline;
}
.money {
color: #fe3647;
font-size: 36rpx;

}
.more{
  font-size: 24rpx;
  color: #666;
  margin-right: 23px;

}
.scroll-x {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 30rpx;
  background: white;
}

.openclass-detail {
  width: 448rpx;
