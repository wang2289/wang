
Page({
  /**
   * 页面的初始数据
   */
  data: {
    tikus: [],
    isActive: 0,
    isActive2: 1,
    isActive3: 0,
    isActive4: 0,
    mainActiveIndex: 0,
    activeId: null,
    show: false,
    isshow: true,
    show2: false,
    isshow2: true,
    items: [{
      // 导航名称
      text: '所有城市',
      // 该导航下所有的可选项
      children: [{
        text: '温州',
        id: 1,
      },
      {
        text: '杭州',
        id: 2
      }
      ]
    }, {
      // 导航名称
      text: '所有城市2',
      // 该导航下所有的可选项
      children: [{
        text: '温州2',
        id: 1,
      },
      {
        text: '杭州2',
        id: 2
      }
      ]
    }],
    // tikutab: ['全部', '会计初级', '会计中级', '综合版会计实务', '综合版会计实务2'],
    tikutab: [{
      title: '全部',
      id: '1111'
    }, {
      title: '会计中级',
      id: '1112'
    }]
  },
  onActive: function (e) {
    var index = e.currentTarget.dataset.tab; //获取当前点击的元素下标
    var id = e.currentTarget.dataset.id;
    console.log(id);
    this.setData({
      isActive: index,
    })
  },
  onActive2: function (e) {
    var index = e.currentTarget.dataset.tab; //获取当前点击的元素下标
    // console.log(e.currentTarget);
    this.setData({
      isActive2: index,
    })
  },
  onOpenlei: function () {
    var num = this.data.isActive3 == 1 ? 0 : 1
    this.setData({
      show: !this.data.show,
      isshow: !this.data.isshow,
      show2: false,
      isshow2: true,
      isActive3: num,
      isActive4: 0
    })
  },
  onOpenzong: function () {
    var num = this.data.isActive4 == 1 ? 0 : 1
    this.setData({
      show2: !this.data.show2,
      isshow2: !this.data.isshow2,
      show: false,
      isshow: true,
      isActive4: num,
      isActive3: 0
    })
  },
  Onclose: function () {
    this.setData({
      show2: false,
      isshow2: true,
      show: false,
      isshow: true,
      isActive3: 0,
      isActive4: 0
    })
  },
  onTap: function (event) {
    let postId = event.currentTarget.dataset.postid;
    console.log(postId)
    wx.navigateTo({
      url: '../../pages/tidetail/tidetail?bid=' + postId,
    })
  },
  onClickNav({
    detail = {}
  }) {
    this.setData({
      mainActiveIndex: detail.index || 0
    });
  },

  onClickItem({
    detail = {}
  }) {
    const activeId = this.data.activeId === detail.id ? null : detail.id;

    this.setData({
      activeId
    });
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var data = [{
      title: '会计必备基础知会计必-会计法',
      id: 1111,
      see: '5978',
      money: '60',
      isbuy: false,
      imgurl: '/images/icon_bofangliang@2x.png'
    }, {
      title: '会计必备基础知会计必-会计法',
      id: 1111,
      see: '5978',
      money: '60',
      isbuy: true,
      imgurl: '/images/icon_bofangliang@2x.png'
    }]
    this.setData({
      tikus: data
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
    this.getTikuTab()
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {
    // this.getTikuTab()
  },
  getTikuTab() {
  },
  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})