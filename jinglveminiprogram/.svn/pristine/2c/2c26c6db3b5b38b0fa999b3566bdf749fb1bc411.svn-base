.meng {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 9999;
}

.mengbox {
  width: 610rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -305rpx;
  margin-top: -220rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 65rpx 48rpx;
  padding-top: 42rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  z-index: 9999;
}

.tishi {
  text-align: center;
  color: #666;
  font-size: 30rpx;
  margin-bottom: 32rpx;
}

.mengtitle {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333;
  margin-bottom: 109rpx;
}

.mengbom {
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: absolute;
  width: 100%;
  bottom: 0rpx;
  left: 0rpx;
  padding-bottom: 30rpx;
}

.sub {
  width: 199rpx;
  height: 78rpx;
  background: linear-gradient(0deg, rgba(254, 42, 42, 1), rgba(253, 115, 41, 1));
  border-radius: 39rpx;
  text-align: center;
  line-height: 78rpx;
  font-size: 28rpx;
  color: #fff;
}

.cancle {
  width: 199rpx;
  height: 78rpx;
  border: 1px solid rgba(153, 153, 153, 1);
  border-radius: 39rpx;
  text-align: center;
  line-height: 78rpx;
  color: #666;
  font-size: 28rpx;
  margin-right: 51rpx;
}
