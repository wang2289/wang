/**index.wxss**/

.title {
  height: 34rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-left: 32rpx;
  margin-top: 44rpx;
}

.main-container {
  margin-top: 100rpx;
}

.usernameinput {
  position: relative;
  /* height: 120rpx; */
  border-bottom: rgba(204, 204, 204, 1) 1px solid;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.usericon, .eyeicon {
  width: 40rpx;
  height: 40rpx;
}

.usericon {
  position: relative;
  left: 10rpx;
  top: 50rpx;
}

.eyeiconcontainer {
  position: absolute;
  left: 650rpx;
  top: 50rpx;
  /* border-bottom: rgba(204, 204, 204, 1) 1px solid; */
  z-index: 999;
  width: 69rpx;
}

#username, #password {
  /* border-bottom: rgba(204, 204, 204, 1) 1px solid; */
  border-left-width: 0px;
  border-right-width: 0px;
  border-top-width: 0px;
  width: 629rpx;
  /* margin-left: 30rpx; */
  padding-left: 51rpx;
}
#password{
  width: 560rpx;
}
.btn-container {
  margin-left: 30rpx;
  margin-top: 90rpx;
}

.join-now {
  height: 25rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 30rpx;
  margin-left: 610rpx;
  margin-top: 8rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
