.textarea{
  display: inline-block;
  width: 100%;
  padding: 10rpx;
  border:1rpx solid rgba(221, 221, 221, 1);
  box-sizing: border-box;
  border-radius: 5rpx;
  margin-bottom: 60rpx;
  height:160rpx;
  max-height: 360rpx;
}
.timuclass {
  padding: 5rpx 10rpx;
  background: #fff;
  color: #fe3f36;
  border-radius: 25rpx;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  border: 1px solid #fe3f36;
  margin: 0rpx 20rpx 0rpx 0rpx;
}

.timubody {
  color: #666666;
  font-size: 30rpx;
}
.timuchoise {
  margin-top: 20rpx;
  padding-bottom: 60rpx;
}
.timuchoise view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
  overflow: hidden;
}

.choisenum {
  width: 68rpx;
  height: 68rpx;
  line-height: 68rpx;
  display: inline-block;
  border: 1px solid rgba(221, 221, 221, 1);
  border-radius: 50%;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  align-self: flex-start;
}

.choisename {
  color: #333;
  font-size: 30rpx;
  padding-left: 15rpx;
  width:595rpx;
  display: inline-block;
  line-height: 1.5;
}

.active .choisenum {
  border: 1px solid rgba(102, 102, 102, 1);
}

.active .choisename {
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}
