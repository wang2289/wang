/**index.wxss**/

.van-tabs__wrap:after {
  border: 0 !important;
}

.line {
  margin-top: 22rpx;
  width: 100%;
  height: 1rpx;
  background: #ddd;
}

.watch-title {
  margin-top: 42rpx;
  margin-left: 29rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}

.course-item {
  display: flex;
  margin-left: 31rpx;
  margin-top: 29rpx;
}

.item-image image {
  width: 268rpx;
  height: 150rpx;
  border-radius: 8rpx;
}

.item-text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 17rpx;
  padding-right: 5rpx;
}

.text-title {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.text-detail {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 8rpx;
}

.tabs {
  display: flex;
  margin-left: 31rpx;
  margin-top: 29rpx;
}

.tab-title {
  width: 157rpx;
  height: 54rpx;
  line-height: 54rpx;
  color: #666;
  background: rgba(247, 247, 249, 1);
  border-radius: 27rpx;
  margin-left: 21rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  text-align: center;
}

.active {
  background: linear-gradient(0deg, rgba(254, 42, 42, 1), rgba(253, 115, 41, 1));
  color: rgba(255, 255, 255, 1);
}
.none{
  display: none;
}
.dialogmess{
  width: 450rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:48rpx;
  text-align: center;
  margin-top: 66rpx;
  margin-left: 98rpx;
}
.gologin-btn{
  width: 199rpx;
  height: 78rpx;
  border-radius: 39rpx;
  background:linear-gradient(0deg,rgba(254,42,42,1),rgba(253,115,41,1));
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:78rpx;
  text-align: center;
  margin-left: 213rpx;
  margin-top: 38rpx;
  margin-bottom: 44rpx;
}

.nonedata{
  margin-left: 35rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}
.notes{
  vertical-align: middle;
  width: 21rpx;
  height: 22rpx;
}
.text-detail image{
  vertical-align: bottom;
}
.text-detail text{
  vertical-align: center;
}
.flagicon{
  width: 33rpx;
  height: 33rpx;
}