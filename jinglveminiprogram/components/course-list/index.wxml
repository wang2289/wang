<view class='container'>
  <view class="chapter">
    <van-collapse value="{{ activeNames }}" bind:change="onChange" accordion>
      <block wx:for="{{course}}" wx:key="*this">
        <van-collapse-item name="{{ index+1 }}" is-link='{{islink}}'>
          <view slot="title">
            <image src="{{isOn == index+1 ? downimg:upimg }}" class="icon"></image>{{item.title}}
          </view>
          <view class="section2">
            <block wx:for="{{item.chapter}}" wx:key="*this">
              <view class="title" data-id='{{item.id}}' data-free='{{item.isfree}}' data-buy='{{item.isbuy}}' data-num='{{item.num}}' data-count='{{item.count}}' bindtap="onTap">{{item.name}}
                <view class="line"></view>
                 <!-- <view wx:if="{{item.isbuy&&item.isbuy}}" class="tag">{{item.num}}æ¬¡</view> -->
                <view wx:if="{{item.isbuy}}" class="tag">{{item.num}}{{ismark}}</view>
                <view  wx:elif="{{!item.isbuy}}">
                  <image  wx:if="{{!item.isfree}}" class="lock" src="/images/icon_suo@2x.png"></image>
                </view>
              </view>
            </block>
          </view>
        </van-collapse-item>
      </block>
    </van-collapse>
  </view>
</view>

