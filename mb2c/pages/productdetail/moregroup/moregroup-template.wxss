@import "../grouppeople/grouppeople-template.wxss";

.moregroup-container {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
  overflow: hidden;
}

.moregroup {
  width: 630rpx;
  height: 700rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  margin-top: -350rpx;
  left: 50%;
  margin-left: -315rpx;
  border-radius: 10rpx;
}

.moregroup-box {
  height: 602rpx;
  overflow-y: auto;
  border-radius: 10rpx;
  padding-bottom: 10rpx;
}

.moregroup-title {
  height: 85rpx;
  line-height: 85rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  border-bottom: 1px solid #eee;
}
.share-close{
  width: 56rpx;
  height: 56rpx;
  background: #ddd;
  position: absolute;
  border-radius: 50%;
  top: -20rpx;
  right: -24rpx;
  text-align: center;
  vertical-align: middle
}
.share-close image{
  width: 50%;
  height: 50%;
   vertical-align: middle
}