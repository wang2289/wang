.share-container {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99
}
.share{
  width: 630rpx;
  height: 294rpx;
  background: #fff;
  border-radius: 8rpx;
  position: absolute;
  top:30%;
  margin-top: -57rpx;
  left:50%;
  margin-left: -315rpx;
}
.share-text{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-radius: 8rpx;
  margin-top: 30rpx;
}
.share-text-title {
  font-size: 32rpx;
  color: #333;
  margin: 20rpx 0px;
}
.share-text-people {
  font-size: 32rpx;
  color: #ea281a;
}
.share-group{
   display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 20rpx
}
.share-box{
  text-align: center
}
.share-mid{
  margin: 0 100rpx;
}
.share-box{
  width: 80rpx;
  height: 80rpx;
}
.share-box image{
  width: 80rpx;
  height: 80rpx;
}
.share-close{
  width: 56rpx;
  height: 56rpx;
  background: #ddd;
  position: absolute;
  border-radius: 50%;
  top: -26rpx;
  right: -26rpx;
  text-align: center;
  vertical-align: middle
}
.share-close image{
  width: 50%;
  height: 50%;
   vertical-align: middle
}