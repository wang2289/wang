.mybargain-container {
  display: flex;
  flex-direction: row;
  padding: 21rpx 0px 0px 24rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.mybargain-img {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 41rpx;
}

.mybargain-box {
  display: flex;
  flex-direction: column;
  /* margin-right: 25rpx; */
  margin-left: 28rpx;
  width:554rpx;
}

.mybargain-title {
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
  padding-right: 25rpx;
}
.mybargain-tips{
    font-size: 28rpx;
  color: #ea281a;
}
.mybargain-subtitle {
  font-size: 28rpx;
color: #999999;
}
.mybargain-hot{
  color: #ea281a;
}
.mybargain-price {
  margin-top: 28rpx;
  display: flex;
  flex-direction: column;
  vertical-align: middle;
  /* border-bottom: 1px solid #eee; */
}

.mybargain-oldmoney {
  opacity: 0.45;
  font-size: 24rpx;
  color: #000;
  text-decoration: line-through;
  vertical-align: middle;
  margin-left: 7rpx;
  margin-top: 14rpx;
}

.mybargain-money {
  font-size: 32rpx;
  color: #ea281a;
  vertical-align: middle;
  margin-top: 6rpx;
}

.mybargain-money text {
  font-size: 24rpx;
}

.mybargain-buybtn {
  width: 140rpx;
  height: 58rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  color: #fff;
  background: #999;
  border-radius: 8rpx;
  text-align: center;
  margin-left: 97rpx;
}
.mybargain-time{
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
color: #000000;
vertical-align: middle;
height: 40rpx;
line-height: 40rpx;
margin-top: 10rpx;
}
.mybargain-times{
  background:#000;
  padding: 0 7rpx;
  color: #fff;
font-size: 28rpx;
vertical-align: middle;
height: 40rpx;
line-height: 40rpx;
border-radius: 6rpx;
margin-right: 4rpx;
}
.mybargain-buybtn.active {
  background: #ea281a;
}
.mybargain-buybtn.over {
  background: #999;
}
.mybargain-text {
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
  color: #ea281a;
  padding-top: 13rpx;
  margin-bottom: 18rpx;
  margin-top: 23rpx;
  border-top: 1px solid #eee;
  vertical-align: middle;
}

.mybargain-peo {
  padding-left: 47rpx;
}
