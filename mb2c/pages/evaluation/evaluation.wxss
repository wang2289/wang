}

.scroll-box {
  /* position: absolute; */
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding:30rpx;
  margin-bottom:20rpx; 

  /* background-color: #f8f8f8 !important; */
}

.m-media-box-info-meta {
  padding-right: 5rpx;
}

.m-media-box-appmsg {
  align-items: initial;
  background-color: #fff;
  margin-bottom:20rpx;

}

.m-comment .m-media-box-hd {
  border-radius: 100%;
  overflow: hidden;
  vertical-align: top;
}

.m-media-box-thumb {
  border-radius: 100%;
}

.m-media-box-desc {
  display: block;
  overflow: visible;
  text-overflow: clip;
}

.m-comment .m-media-box-info-meta {
  font-size: 24rpx;
  font-weight: 100;
}

.m-start label {
  font-size: 24rpx;
}

.m-tiem {
  float: right;
}

.sel {
  color: #db384c;
  font-size: 24rpx;
}

.m-media-list {
  float: left;
  width: 100%;
}

.m-media-list image {
  width: 200rpx;
  height: 200rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  border: 1rpx solid #eee;
}

