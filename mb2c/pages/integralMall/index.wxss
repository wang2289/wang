/* pages/integralMall/index.js */

page {
  font-family: PingFang-SC-Regular;
}

.m-scrollBox {
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

.s-container {
  background: #f4f5f6;
  width: 100%;
  margin-top: 10rpx;
  box-sizing: border-box;
  position: absolute;
}

.clearfix:after {
  content: "\0020";
  display: block;
  height: 0;
  clear: both;
}

.clearfix {
  zoom: 1;
}

.itemViewStyle {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 450rpx;
  background-color: white;
  align-items: center;
}

.itemViewStyle {
  /* justify-content: space-around; */
}

.nameStyle, .pointStyle, .yishouStyle {
  margin: 0;
  padding: 0;
}

.nameStyle {
  font-size: 32rpx;
  color: #333;
  /* overflow: hidden; */
  width: 85%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 6rpx auto;
}

.pointStyle {
  font-size: 24rpx;
  color: #EB291B;
  margin-top: 4rpx;
  text-align: left;
  width: 85%;
  text-justify: inter-cluster;
  margin-bottom:26rpx;
  margin: 0 auto;
}

.pointStyle-money {
  padding-bottom: 10rpx;
  line-height: 30rpx;
  font-size: 28rpx;
}

.imageStyle {
  width:320rpx;
  height:320rpx;
  margin-top:15rpx;
}

.navStyle {
  height: auto;
  width:50%;
  overflow:hidden;
  display: inline-block;
  padding-top: 28rpx;
  background-color: white;
  border: 1rpx solid #EEEEEE;
  border-right: 0;
  border-bottom: 0;
  box-sizing:border-box;
}

